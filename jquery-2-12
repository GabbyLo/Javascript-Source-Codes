 	<script type="text/javascript" src="jquery.js"></script>
 	<script type="text/javascript">
 		function showfr()
 		{
 		var froption=document.getElementById('fruits').options;
 		var frindex=document.getElementById('fruits').selectedIndex;
 		var selected = froption[frindex].value;
 		alert(selected);
 	}

 	function showst()
 	{
 		var stoption=document.getElementById('STRAND').options;
 		var stindex=document.getElementById('STRAND').selectedIndex;
 		var sselected = stoption[stindex].value;
 		alert(sselected);
 	}

 	$(function(){
 		$("button").click(function(){
 			$("img").hide();
 		})
 		$("#1").click(function(){
 			$("#a").show();
 		})
 		$("#2").click(function(){
 			$("#m").show();
 		})
 		$("#3").click(function(){
 			$("#f").show()
 		})

 		$("#numberi").keyup(function(){
 			var thevalue=document.getElementById('numberi').value;
 			var result="";
 			var strthevalue=thevalue.toString();
 			if (isNaN(thevalue)==true) {
 				result="Sorry it's not a number";
 			}
 			else
 			{
 				result="It's a number";
 			}

 			var	req="";
 			if (strthevalue.length<7) {
 				req="Too Weak"
 			}
 			else
 			{
 				req="Strong"
 			}

 			document.getElementById('output').innerHTML=result+"<br>"+req;
 		})
 	})


 	</script>
